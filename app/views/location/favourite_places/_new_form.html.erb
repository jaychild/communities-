<fieldset>
  <legend>New Favourite Place</legend>
  <%= form_for @favourite_place, url: 'location/favourite_places#create', method: :post  do |f| %>
      <span>
        <label>Name:</label> <%= f.text_field(:name) %>
      </span>

      <span>
        <label>Address:</label> <%= f.text_field(:address_line) %>
      </span>

      <span>
        <label>Region:</label> <%= f.text_field(:region) %>
      </span>

      <span>
        <label>Country:</label> <%= f.text_field(:country) %>
      </span>

      <span>
        <label>Post Code:</label> <%= f.text_field(:post_code) %>
      </span>

      <span>
        <%= f.submit 'Save' %>
      </span>
  <% end %>
</fieldset>